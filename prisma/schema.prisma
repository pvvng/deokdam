generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  name       String
  email      String
  providerId String   @unique
  avatar     String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  userMessages Message[] @relation("Message")
}

model Message {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  payload     String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  openAt      DateTime
  isPublic    Boolean  @default(false)
  accessToken String?

  writerId String? @db.ObjectId
  writer   User?   @relation("Message", fields: [writerId], references: [id])
}
