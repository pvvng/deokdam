generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id           String    @id @default(auto()) @map("_id") @db.ObjectId
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  messages     Message[]
  // 덕담 접근 허가 토큰
  accessTokens String[]  @default([])
}

model Message {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  payload   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  openAt    DateTime
  writer    User     @relation(fields: [writerId], references: [id], onDelete: Restrict)
  writerId  String   @db.ObjectId
  // 접근 허가 관련
  isPublic  Boolean  @default(false)
  token     String?
}
